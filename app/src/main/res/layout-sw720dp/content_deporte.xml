<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.raimundoj.fundownfinal.Deporte"
    tools:showIn="@layout/activity_deporte">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fondo"
        android:background="@drawable/fondo6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/start_game_button_lights1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="615dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/button_start_lights"/>

    <ImageButton
        android:id="@+id/maniqui"
        android:layout_width="98dp"
        android:layout_height="135dp"
        android:background="@drawable/btncamisa"
        android:layout_below="@+id/sonido"
        android:layout_toEndOf="@+id/box"
        android:layout_marginStart="240dp"
        android:layout_marginTop="71dp" />


    <ImageView
        android:id="@+id/start_game_button_lights2"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/button_start_lights"/>

    <ImageButton
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:id="@+id/box"
        android:background="@drawable/box"
        android:clickable="false"
        android:layout_marginLeft="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
         />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/home"
        android:background="@drawable/btnhome"
        android:layout_marginTop="50px"
        android:layout_marginLeft="100px"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/sonido"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btnsonidoon"
        android:layout_alignTop="@+id/home"
        android:layout_toStartOf="@+id/info"
        android:layout_marginEnd="46dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/info"
        android:background="@drawable/btninfo"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/sonido"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/avatar"
        android:background="@drawable/avatar1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="100px"
        android:layout_marginEnd="35dp"
        android:layout_below="@+id/sonido"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
